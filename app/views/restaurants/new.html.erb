<h1>Add a New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "Restaurant Name" %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :phone_number, label: "Phone Number" %>
    <%= f.input :category, label: "Category", collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  </div>

  <%= f.submit "Add Restaurant", class: "btn btn-primary" %>
<% end %>
